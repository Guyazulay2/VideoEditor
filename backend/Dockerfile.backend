FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    ffmpeg \
    curl \
    wget \
    git \
    vim \
    nano \
    htop \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

RUN pip install --upgrade pip setuptools wheel
COPY backend/backend.py .

RUN pip install \
    flask \
    flask-cors \
    werkzeug \
    requests


EXPOSE 5000

CMD ["python", "backend.py"]
